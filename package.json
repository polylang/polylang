  "resolutions": {
    "css-what": "5.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/polylang/polylang.git"
  },
  "keywords": [
    "multilingual",
    "bilingual",
    "translate",
    "translation",
    "language",
    "multilanguage",
    "international",
    "localization"
