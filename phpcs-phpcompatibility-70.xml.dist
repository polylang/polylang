<?xml version="1.0"?>
<ruleset name="Polylang PHP 7.0">
	<description>PHP compatibility for files that require 7.0</description>

	<arg name="colors"/>
	<arg value="ps"/>
	<arg name="parallel" value="20"/>
	<arg name="cache"/>

	<file>./polylang.php</file>
	<file>./include/constant-functions.php</file>
	<file>./install/usable.php</file>
	<file>./vendor/autoload.php</file>

	<config name="testVersion" value="7.0-"/>

	<rule ref="PHPCompatibilityWP"/>
</ruleset>
